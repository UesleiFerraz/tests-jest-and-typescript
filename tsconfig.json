{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDirs": ["./src", "./tests"],

    "strict": true,

    "esModuleInterop": true,
    "strictPropertyInitialization": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
