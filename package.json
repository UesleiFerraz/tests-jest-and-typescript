{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/ioredis": "^4.26.7",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/node": "^15.14.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.0",
    "jest": "^27.0.6",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "ioredis": "^4.27.6",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "prebuild": "yarn migration:run",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "yarn tsc",
    "start": "node dist/server.js",
    "migration:run": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert",
    "migration:run:test": "docker-compose up -d && cross-env NODE_ENV=test yarn ts-node ./node_modules/typeorm/cli.js migration:run",
    "test:setup": "yarn migration:run:test",
    "test": "yarn test:setup && cross-env NODE_ENV=test yarn jest --watchAll --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "yarn test:setup && cross-env NODE_ENV=test yarn jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watchAll -c jest-unit.config.js",
    "test:integration": "yarn test --watchAll -c jest-integration.config.js",
    "test:coverage": "yarn test --coverage"
  }
}
